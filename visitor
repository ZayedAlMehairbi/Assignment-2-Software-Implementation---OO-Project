class Visitor:
    def __init__(self, name, age, nationality, id_card):
        self.name = name
        self.age = age
        self.nationality = nationality
        self.id_card = id_card

class TicketPurchase:
    def __init__(self):
        self.tickets = []

    def purchase_ticket(self, visitor, event, price):
        ticket = Ticket(visitor, event, price)
        self.tickets.append(ticket)

class Tour:
    def __init__(self, date, num_visitors, guide):
        self.date = date
        self.num_visitors = num_visitors
        self.guide = guide
