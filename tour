class SpecialEvent:
    def __init__(self, event_type, location, duration):
        self.event_type = event_type
        self.location = location
        self.duration = duration

class Ticket:
    def __init__(self, visitor, event, price):
        self.visitor = visitor
        self.event = event
        self.price = price
