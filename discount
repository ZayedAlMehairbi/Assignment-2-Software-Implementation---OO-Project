class Ticket:
    def __init__(self, visitor, event, price):
        self.visitor = visitor
        self.event = event
        self.price = price

    def calculate_price(self):
        if self.event.title == "Special Event":
            # Handle special pricing for special events
            return self.price
        elif self.visitor.age < 18 or self.visitor.age >= 60 or self.visitor.nationality in ["teacher", "student"]:
            # Free ticket for children below 18, seniors above 60, and teachers/students
            return 0
        elif self.visitor.age >= 18 and self.visitor.age <= 60:
            # Adults between 18 and 60 pay 63 AED
            return 63.00
        else:
            # Default price
            return self.price

    def apply_discount(self):
        if self.event.title != "Special Event":
            if self.visitor.age >= 18 and self.visitor.age <= 60:
                # Apply VAT for adults between 18 and 60
                return self.price * 1.05
            elif self.visitor.age < 18 or self.visitor.age >= 60 or self.visitor.nationality in ["teacher", "student"]:
                # No VAT for children, seniors, teachers, or students
                return self.price
            else:
                # Default price
                return self.price
        else:
            # No VAT for special events
            return self.price

    def apply_group_discount(self, num_tickets):
        if num_tickets >= 10:
            # Apply 50% discount for groups of 10 or more
            return self.price * 0.5
        else:
            return self.price
